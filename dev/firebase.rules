rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Profil utilisateur
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Collections imbriqu√©es sous users/{uid}
    match /users/{uid}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
